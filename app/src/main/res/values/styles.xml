<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="AppTheme.NoActionBar">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FEDBD0</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="background">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@color/tab_indicator_color</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">@color/tab_indicator_color</item>
        <item name="tabTextColor">@android:color/darker_gray</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabMode">scrollable</item>
    </style>

    <!-- Widget theme -->
    <style name="WidgetTheme" parent="AppTheme">
        <item name="appWidgetRadius">10dp</item>
        <item name="appWidgetInnerRadius">10dp</item>
        <item name="appWidgetPadding">0dp</item>
    </style>

    <style name="Widget.AppWidget.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">
            ?android:attr/colorBackground
        </item>
    </style>
</resources>