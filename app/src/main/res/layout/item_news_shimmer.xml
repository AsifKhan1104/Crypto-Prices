<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewNews"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@android:color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#B3B3B3"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/imageView"
            android:background="#B3B3B3"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="3"
            android:textColor="@android:color/black"
            tools:text="Crypto bank Silvergate could jump 50% as institutional adoption and stablecoin use provides a 'long runway' for growth, Bank of America says" />

        <TextView
            android:id="@+id/textViewSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imageView"
            android:background="#B3B3B3"
            android:fontFamily="sans-serif-light"
            android:maxLines="1"
            android:textSize="12sp"
            tools:text="CryptoPanic" />

        <ImageView
            android:id="@+id/imageViewDot"
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:layout_alignTop="@+id/textViewSource"
            android:layout_alignBottom="@+id/textViewSource"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/textViewSource"
            android:background="#B3B3B3"
            android:src="@drawable/dot"
            tools:src="@drawable/dot" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/imageViewDot"
            android:background="#B3B3B3"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:maxLines="1"
            android:textSize="12sp"
            tools:text="2022-03-22" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>